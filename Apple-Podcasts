[Rule]
# Apple Podcasts (主要域名/接口)
DOMAIN,podcasts.apple.com
DOMAIN,podcastsconnect.apple.com
DOMAIN,amp-api.podcasts.apple.com

# iTunes/Apple 媒体相关（Podcasts 常会走到这些）
DOMAIN,itunes.apple.com
DOMAIN,api-edge.itunes.apple.com
DOMAIN,buy.itunes.apple.com

# 资源与图片 CDN
DOMAIN-SUFFIX,mzstatic.com
DOMAIN-SUFFIX,aaplimg.com